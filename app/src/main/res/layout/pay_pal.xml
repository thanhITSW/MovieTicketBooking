<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayPalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icons8_paypal_60"
            android:gravity="right"
            android:text="Pay"
            android:textColor="#0D32B8"
            android:textStyle="bold|italic"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pal"
            android:textColor="#19C9FF"
            android:textStyle="bold|italic"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/areaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtPPUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="@string/t_n_t_i_kho_n"
            android:inputType="text"
            android:padding="10sp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtPPPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="@string/m_t_kh_u"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="5sp"
            android:visibility="gone"
            android:textColor="#FF0000"
            android:text="@string/th_ng_b_o_l_i" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:backgroundTint="#418CE4"
            android:padding="15sp"
            android:text="@string/ng_nh_p"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/areaPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvPPUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10sp"
            android:padding="10sp"
            android:text="@string/t_n_t_i_kho_n"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckedTextView
            android:id="@+id/checkedTvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:drawablePadding="10sp"
            android:padding="10sp"
            android:text="@string/ng_xu_t"
            android:textColor="#0B81A5"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10sp"
                android:text="@string/s_ti_n_thanh_to_n"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10sp"
                android:text="240,000 VND"
                android:textColor="#FF0000"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:backgroundTint="#418CE4"
            android:padding="15sp"
            android:text="@string/dongy"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>